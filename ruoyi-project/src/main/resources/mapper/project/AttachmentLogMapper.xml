<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.project.mapper.AttachmentLogMapper">

    <resultMap type="AttachmentLog" id="AttachmentLogResult">
        <result property="logId"    column="log_id"    />
        <result property="attachmentId"    column="attachment_id"    />
        <result property="businessType"    column="business_type"    />
        <result property="businessId"    column="business_id"    />
        <result property="operationType"    column="operation_type"    />
        <result property="operationDesc"    column="operation_desc"    />
        <result property="documentType"    column="document_type"    />
        <result property="documentTypeName"    column="document_type_name"    />
        <result property="fileName"    column="file_name"    />
        <result property="operatorId"    column="operator_id"    />
        <result property="operatorName"    column="operator_name"    />
        <result property="operationTime"    column="operation_time"    />
        <result property="createTime"    column="operation_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectAttachmentLogVo">
        select
            l.log_id,
            l.attachment_id,
            l.business_type,
            l.business_id,
            l.operation_type,
            l.operation_desc,
            l.document_type,
            l.file_name,
            l.operator_id,
            l.operator_name,
            l.operation_time,
            l.remark,
            d.dict_label as document_type_name
        from pm_attachment_log l
        left join sys_dict_data d on l.document_type = d.dict_value and d.dict_type = 'sys_wdlx'
    </sql>

    <select id="selectAttachmentLogList" resultMap="AttachmentLogResult">
        <include refid="selectAttachmentLogVo"/>
        where business_type = #{businessType} and business_id = #{businessId}
        order by operation_time desc
    </select>

    <select id="selectAttachmentLogByLogId" parameterType="Long" resultMap="AttachmentLogResult">
        <include refid="selectAttachmentLogVo"/>
        where log_id = #{logId}
    </select>

    <insert id="insertAttachmentLog" parameterType="AttachmentLog" useGeneratedKeys="true" keyProperty="logId">
        insert into pm_attachment_log
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="attachmentId != null">attachment_id,</if>
            <if test="businessType != null and businessType != ''">business_type,</if>
            <if test="businessId != null">business_id,</if>
            <if test="operationType != null and operationType != ''">operation_type,</if>
            <if test="operationDesc != null and operationDesc != ''">operation_desc,</if>
            <if test="documentType != null">document_type,</if>
            <if test="fileName != null">file_name,</if>
            <if test="operatorId != null">operator_id,</if>
            <if test="operatorName != null">operator_name,</if>
            <if test="remark != null">remark,</if>
            operation_time
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="attachmentId != null">#{attachmentId},</if>
            <if test="businessType != null and businessType != ''">#{businessType},</if>
            <if test="businessId != null">#{businessId},</if>
            <if test="operationType != null and operationType != ''">#{operationType},</if>
            <if test="operationDesc != null and operationDesc != ''">#{operationDesc},</if>
            <if test="documentType != null">#{documentType},</if>
            <if test="fileName != null">#{fileName},</if>
            <if test="operatorId != null">#{operatorId},</if>
            <if test="operatorName != null">#{operatorName},</if>
            <if test="remark != null">#{remark},</if>
            sysdate()
         </trim>
    </insert>

    <update id="updateAttachmentLog" parameterType="AttachmentLog">
        update pm_attachment_log
        <trim prefix="SET" suffixOverrides=",">
            <if test="attachmentId != null">attachment_id = #{attachmentId},</if>
            <if test="businessType != null and businessType != ''">business_type = #{businessType},</if>
            <if test="businessId != null">business_id = #{businessId},</if>
            <if test="operationType != null and operationType != ''">operation_type = #{operationType},</if>
            <if test="operationDesc != null and operationDesc != ''">operation_desc = #{operationDesc},</if>
            <if test="documentType != null">document_type = #{documentType},</if>
            <if test="fileName != null">file_name = #{fileName},</if>
            <if test="operatorId != null">operator_id = #{operatorId},</if>
            <if test="operatorName != null">operator_name = #{operatorName},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where log_id = #{logId}
    </update>

    <delete id="deleteAttachmentLogByLogId" parameterType="Long">
        delete from pm_attachment_log where log_id = #{logId}
    </delete>

    <delete id="deleteAttachmentLogByLogIds" parameterType="Long">
        delete from pm_attachment_log where log_id in
        <foreach item="logId" collection="array" open="(" separator="," close=")">
            #{logId}
        </foreach>
    </delete>
</mapper>
